{
  "name": "bugment",
  "version": "1.0.0",
  "description": "AI-powered code review for Pull Requests using Augment",
  "main": "dist/action.js",
  "private": false,
  "scripts": {
    "build": "tsc",
    "package": "npm run build && npm run package:action",
    "package:action": "ncc build src/action.ts -o dist --source-map --license licenses.txt",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "github-action",
    "code-review",
    "ai",
    "augment",
    "pull-request"
  ],
  "author": "Bugment Team",
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "@vercel/ncc": "^0.38.3",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "p-retry": "^6.2.1",
    "p-timeout": "^6.1.4"
  }
}
